        app:layout_constraintVertical_bias="0.611" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="44dp"
